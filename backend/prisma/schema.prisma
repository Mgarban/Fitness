// Prisma schema for Fitness tracker
datasource db {
	provider = "sqlite"
	url      = env("DATABASE_URL")
}

generator client {
	provider = "prisma-client-js"
}

model User {
	id        Int       @id @default(autoincrement())
	email     String    @unique
	password  String
	name      String?
	workouts  Workout[]
	createdAt DateTime  @default(now())
}

model Workout {
	id        Int      @id @default(autoincrement())
	user      User     @relation(fields: [userId], references: [id])
	userId    Int
	type      String
	duration  Int      // duration in minutes
	calories  Int?
	notes     String?
	createdAt DateTime @default(now())
}
